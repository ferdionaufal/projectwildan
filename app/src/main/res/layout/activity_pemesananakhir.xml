<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".pemesananakhir">

    <TextView
        android:id="@+id/judulorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="50dp"
        android:text="Form Pemesanan"
        android:textSize="10pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logopemesanan"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:src="@drawable/logokecil"
        app:layout_constraintLeft_toRightOf="@+id/judulorder"
        app:layout_constraintStart_toEndOf="@id/judulorder"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/formnamahint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:text="Nama :"
        android:textSize="8pt"
        app:layout_constraintTop_toBottomOf="@id/judulorder"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/formnamaregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="33dp"
        android:ems="8"
        android:hint="Nama"
        app:layout_constraintTop_toBottomOf="@id/judulorder"
        app:layout_constraintLeft_toRightOf="@+id/formnamahint"
        />

    <TextView
        android:id="@+id/alamathint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="Alamat :"
        android:textSize="8pt"
        app:layout_constraintStart_toStartOf="@id/formnamahint"
        app:layout_constraintTop_toBottomOf="@id/formnamahint"/>

    <EditText
        android:id="@+id/alamatregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="8"
        android:hint="Alamat"
        app:layout_constraintStart_toStartOf="@id/formnamaregister"
        app:layout_constraintTop_toBottomOf="@id/formnamaregister"
        />

    <TextView
        android:id="@+id/nomorhphint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="No.Hp :"
        android:textSize="8pt"
        app:layout_constraintTop_toBottomOf="@+id/alamathint"
        app:layout_constraintStart_toStartOf="@id/alamathint" />

    <EditText
        android:id="@+id/nomorhpregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nomor Handphone"
        android:layout_marginTop="10dp"
        android:ems="8"
        android:inputType="phone"
        app:layout_constraintStart_toStartOf="@id/alamatregister"
        app:layout_constraintTop_toBottomOf="@id/alamatregister"/>

    <TextView
        android:id="@+id/namabaranghint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Nama Barang :"
        android:textSize="8pt"
        app:layout_constraintStart_toStartOf="@id/nomorhphint"
        app:layout_constraintTop_toBottomOf="@+id/nomorhphint" />

    <EditText
        android:id="@+id/namabarangregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nama Barang"
        android:layout_marginTop="10dp"
        android:ems="8"
        app:layout_constraintStart_toStartOf="@id/nomorhpregister"
        app:layout_constraintTop_toBottomOf="@+id/nomorhpregister"/>


    <Button
        android:id="@+id/orderbutton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#444eff"
        android:textColor="#ffff"
        android:text="Order"
        app:layout_constraintStart_toStartOf="@id/judulorder"
        app:layout_constraintTop_toBottomOf="@id/namabarangregister"/>

    <Button
        android:id="@+id/buttonback"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#444eff"
        android:textColor="#ffff"
        android:onClick="buttonbaack"
        android:text="back"
        app:layout_constraintStart_toStartOf="@id/orderbutton"
        app:layout_constraintTop_toBottomOf="@id/orderbutton"/>



</android.support.constraint.ConstraintLayout>