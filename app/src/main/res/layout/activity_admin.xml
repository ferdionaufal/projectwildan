<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".admin">

    <ImageView
        android:id="@+id/fotoadmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logokecil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/juduladmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:text="Admin"
        android:fontFamily="sans-serif"
        android:textSize="15pt"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/fotoadmin"
        app:layout_constraintTop_toBottomOf="@id/fotoadmin"
        />
    <TextView
        android:id="@+id/judulPemesanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Data Pemesanan"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/juduladmin"
       app:layout_constraintTop_toBottomOf="@id/juduladmin"
        />

    <ListView
        android:id="@+id/listviewOrders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="@id/fotoadmin"
        app:layout_constraintTop_toBottomOf="@id/fotoadmin">

</ListView>

</android.support.constraint.ConstraintLayout>